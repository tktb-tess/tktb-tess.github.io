---
interface Props {
  readonly title: string;
  readonly url: string;
  readonly description?: string;
}

const { title, description = title, url } = Astro.props;
const base = 'https://tktb-tess.github.io';
const pageUrl = new URL(url, base).href;
const linkCardUrl = new URL('/link_card.png', base);
---

<meta name='description' content={description} />
<meta property='og:title' content={title} />
<meta property='og:description' content={description} />
<meta property='og:type' content='website' />
<meta property='og:url' content={pageUrl} />
<meta property='og:site_name' content='tktb-tess.github.io' />
<meta property='og:image' content={linkCardUrl} />
<meta name='twitter:card' content='summary' />
<meta name='twitter:title' content={title} />
<meta name='twitter:description' content={description} />
<meta name='twitter:image' content={linkCardUrl} />
